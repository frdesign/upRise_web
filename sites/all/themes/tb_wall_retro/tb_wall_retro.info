; Theme info
name = 'Tb Wall Retro'
description = TB Wall Retro is a light weight Drupal theme that is based on <a href="http://themebrain.com/about-nucleus">Nucleus</a>. Requires <a href="http://drupal.org/project/nucleus">Nucleus</a> base theme.
core = '7.x'
engine = 'phptemplate'
base theme = 'nucleus'
screenshot = 'screenshot.png'

; Stylesheets
stylesheets[all][] = 'css/html-elements.css'
stylesheets[all][] = 'css/forms.css'
stylesheets[all][] = 'css/page.css'
stylesheets[all][] = 'css/articles.css'
stylesheets[all][] = 'css/comments.css'
stylesheets[all][] = 'css/forum.css'
stylesheets[all][] = 'css/fields.css'
stylesheets[all][] = 'css/blocks.css'
stylesheets[all][] = 'css/navigation.css'
stylesheets[all][] = 'css/fonts.css'
stylesheets[all][] = 'css/typo.css'
stylesheets[all][] = 'css/layout.css'
stylesheets[all][] = 'css/scrollbar.css'

; Seperate CSS3 to css3.css
stylesheets[all][] = 'css/css3.css'

; Stylesheets for Print Media
stylesheets[print][] = 'css/print.css'

; Conditional Stylesheets for IE
stylesheets-conditional[lt IE 9][all][] = 'css/jquery.mCustomScrollbar.css'
stylesheets-conditional[IE][all][] = css/ie.css
stylesheets-conditional[IE 7][all][] = css/ie7.css
stylesheets-conditional[lt IE 9][all][] = css/ie8.css

; Responsive
stylesheets[only screen and (min-width:1891px)][] = 'css/screens/layout-hd.css'
stylesheets[only screen and (min-width:1586px) and (max-width: 1890px)][] = 'css/screens/layout-wide-extra.css'
stylesheets[only screen and (min-width:1236px) and (max-width: 1585px)][] = 'css/screens/layout-wide.css'
stylesheets[only screen and (min-width:1050px) and (max-width: 1235px)][] = 'css/screens/layout-normal.css'

stylesheets[only screen and (min-width: 720px) and (max-width: 1049px)][] = 'css/screens/tablet.css'
stylesheets[only screen and (min-width: 720px) and (max-width: 959px)][] = 'css/screens/tablet-vertical.css'
stylesheets[only screen and (max-width:719px)][] = 'css/screens/mobile.css'
stylesheets[only screen and (max-width:479px)][] = 'css/screens/mobile-vertical.css'

; Scripts in this theme
scripts[] = 'js/jquery.matchHeights.min.js'
scripts[] = 'js/jquery.masonry.min.js'
scripts[] = 'js/modernizr-transitions.js'
scripts[] = 'js/jquery.mousewheel.min.js'
scripts[] = 'js/jquery-ui-1.8.21.custom.min.js'
scripts[] = 'js/jquery.mCustomScrollbar.js'
scripts[] = 'js/iscroll.js'
scripts[] = 'js/jquery.smooth-scroll.js'
scripts[] = 'js/tb_wall_retro.js'

